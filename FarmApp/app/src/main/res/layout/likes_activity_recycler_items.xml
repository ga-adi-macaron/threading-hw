<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/like_farm_photo"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="12dp"/>
        <ImageView
            android:id="@+id/like_heart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:alpha="0.9"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_favorite_white_24dp"
            android:tint="#b71c1c"/>
        <TextView
            android:id="@+id/like_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/like_heart"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/like_farm_photo"/>
        <TextView
            android:id="@+id/like_farm_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/like_heart"
            android:layout_below="@id/like_farm_name"
            android:layout_toRightOf="@id/like_farm_photo"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>